{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--port", 
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "console": "internalConsole"
        },
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "frontend/app.py"
            ],
            "justMyCode": false,
            "console": "internalConsole"
        }
    ],
    "compounds": [
        {
            "name": "FastAPI + Streamlit",
            "configurations": ["FastAPI", "Streamlit"]
        }
    ]
}